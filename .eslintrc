{
    "parser": "babel-eslint",
    "plugins": [
        "babel"
    ],
    "env": {
        "browser": true,
        "node": true,
        "mocha": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true,
        "jsx": true,
    },
    "rules" : {
        "global-require": 0,
        "import/no-unresolved": 0,
        "no-var": 0,
        "max-len": [2, 200, 4],
        "no-param-reassign": 0
    }
}
